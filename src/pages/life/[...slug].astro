---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const entries = await getCollection('life');
  return entries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();

const sortedSeriesEntries = (await getCollection('life'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const latestSeriesEntries = sortedSeriesEntries.slice(0, 10);
const hasCurrentInSeries = latestSeriesEntries.some((item) => item.slug === entry.slug);
const seriesEntries = hasCurrentInSeries
  ? latestSeriesEntries
  : [entry, ...latestSeriesEntries];

const tocItems = headings.filter((heading) => heading.depth >= 1 && heading.depth <= 4);
const tocIndent = (depth) => {
  if (depth === 1) return 'toc-depth-1';
  if (depth === 2) return 'toc-depth-2';
  if (depth === 3) return 'toc-depth-3';
  return 'toc-depth-4';
};
---

<Layout title={entry.data.title}>
  <main class="max-w-screen-2xl mx-auto px-4 py-8">
    <div class="lg:flex lg:gap-2">
      {tocItems.length > 0 && (
        <aside class="hidden lg:block w-48 shrink-0">
          <div class="sticky top-24">
            <p class="toc-title">TOC</p>
            <nav aria-label="Table of contents">
              <ul class="toc-list space-y-2 text-sm text-right">
                {tocItems.map((heading) => (
                  <li>
                    <a
                      href={`#${heading.slug}`}
                      class={`toc-link ${tocIndent(heading.depth)}`}
                      data-toc-link
                    >
                      {heading.text}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          </div>
        </aside>
      )}

      <div class="flex-1">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm">
          <article class="prose prose-sm md:prose lg:prose-xl dark:prose-invert mx-auto p-4 md:p-8">
            <header class="mb-6 md:mb-8">
              <h1 class="text-2xl md:text-4xl font-bold mb-3 md:mb-4 dark:text-white">{entry.data.title}</h1>
              <div class="flex flex-wrap items-center gap-2 md:gap-4 text-gray-600 dark:text-gray-400 text-sm md:text-base">
                <time datetime={entry.data.date.toISOString()} class="shrink-0">
                  {entry.data.date.toLocaleDateString()}
                </time>
                {entry.data.tags && (
                  <div class="flex flex-wrap gap-1.5 md:gap-2">
                    {entry.data.tags.map(tag => (
                      <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 text-xs md:text-sm px-2 py-0.5 md:px-3 md:py-1 rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </header>

            <div class="mt-6 md:mt-8">
              <Content />
            </div>
          </article>
        </div>
      </div>

      {seriesEntries.length > 0 && (
        <aside class="hidden lg:block w-48 shrink-0">
          <div class="sticky top-24">
            <p class="series-title">Latest Lifes</p>
            <nav aria-label="Series">
              <ul class="series-list space-y-2 text-sm text-left">
                {seriesEntries.map((seriesEntry) => (
                  <li>
                    <a
                      href={`/life/${seriesEntry.slug}`}
                      class={`series-link${seriesEntry.slug === entry.slug ? ' is-active' : ''}`}
                    >
                      {seriesEntry.data.title}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          </div>
        </aside>
      )}
    </div>
  </main>

  <!-- 图片放大模态框 -->
  <div id="imageModal" class="fixed inset-0 bg-black bg-opacity-60 z-50 hidden items-center justify-center cursor-zoom-out p-1">
    <img id="modalImage" class="max-h-[100vh] max-w-[100vw] object-contain" src="" alt="" />
  </div>
</Layout>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const tocLinks = Array.from(document.querySelectorAll('[data-toc-link]'));
    if (tocLinks.length === 0) return;

    const tocMap = new Map(
      tocLinks.map((link) => [link.getAttribute('href')?.slice(1), link])
    );
    const headings = Array.from(document.querySelectorAll('article h1, article h2, article h3, article h4'))
      .filter((heading) => heading.id && tocMap.has(heading.id));
    if (headings.length === 0) return;

    let activeId = null;
    const setActive = (id) => {
      if (!id || id === activeId) return;
      activeId = id;
      tocLinks.forEach((link) => {
        const isActive = link.getAttribute('href') === `#${id}`;
        link.classList.toggle('is-active', isActive);
        if (isActive) {
          link.setAttribute('aria-current', 'true');
        } else {
          link.removeAttribute('aria-current');
        }
      });
    };

    const onScroll = () => {
      const offset = 120;
      let currentId = headings[0]?.id;
      for (const heading of headings) {
        if (heading.getBoundingClientRect().top - offset <= 0) {
          currentId = heading.id;
        } else {
          break;
        }
      }
      setActive(currentId);
    };

    window.addEventListener('scroll', onScroll, { passive: true });
    window.addEventListener('resize', onScroll);
    onScroll();
  });
</script>

